{
  "name": "custom-react-pdf-viewer",
  "version": "2.0.0",
  "description": "A lightweight React wrapper around PDF.js with toolbar and find bar.",
  "license": "Apache-2.0",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "dist/index.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --project tsconfig.json",
    "dev": "tsup --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./style.css": "./dist/index.css"
  },
  "keywords": [
    "react",
    "pdf",
    "pdf.js",
    "viewer",
    "findbar",
    "document-viewer"
  ],
  "author": "Roland Arnold",
  "repository": {
    "type": "git",
    "url": "https://github.com/RolandWArnold/custom-react-pdf-viewer.git"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "pdfjs-dist": "4.2.67"
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.2.2",
    "tsup": "^8.0.2",
    "glob": "^10.4.1"
  }
}